@model ToDoList.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1>Изтриване на потребител</h1>

<div>
    <h4>Сигурни ли сте, че искате да изтриете този потребител?</h4>
    <div>
        <strong>Потребителско име:</strong> @Model.Username
    </div>
    <div>
        <strong>Email:</strong> @Model.Email
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
