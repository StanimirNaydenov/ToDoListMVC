@model IEnumerable<ToDoList.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Потребители</h1>

<a asp-action="Create" class="btn btn-primary">Създаване на нов потребител</a>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Потребителско име</th>
            <th>Email</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>

